          option(value='TNN') &#x53F0;&#x5357;&#x5E02;
          option(value='KHH') &#x9AD8;&#x96C4;&#x5E02;
          option(value='PEH') &#x6F8E;&#x6E56;&#x7E23;
          option(value='IUH') &#x5C4F;&#x6771;&#x7E23;
          option(value='TTT') &#x53F0;&#x6771;&#x7E23;
          option(value='HWA') &#x82B1;&#x84EE;&#x7E23;
          option(value='KMN') &#x91D1;&#x9580;&#x7E23;
