            | &#x4E2D;&#x83EF;&#x6C11;&#x570B;&#x53DB;&#x4E82;&#x5730;&#x5340;(Not Valid)
      label
        span
          | &#x90F5;&#x905E;&#x5340;&#x865F; 
          span.required *
        input(type='number' name='receiver_plz' min='0')
      label
        span
          | &#x8A02;&#x55AE;&#x5167;&#x5BB9; 
          span.required *
        input(type='text' name='productName' required='' placeholder='請輸入名稱')
      label
        span
          | &#x5168;&#x90E8;&#x50F9;&#x503C; 
          span.required *
        input(type='number' name='price' required='' placeholder='總價' min='0')
      label
        span
          | &#x5BC4;&#x9001;&#x8CBB;&#x7528;
          span.required (&#x56FA;&#x5B9A;&#x50F9;&#x683C;)
        input(type='number' name='fee' value='80' placeholder='80' readonly='readonly')
      label
        span &#x5099;&#x8A3B;
        input(type='text' name='apartment')
      button(type='submit') &#x78BA;&#x5B9A;
    